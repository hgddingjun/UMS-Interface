<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/new_dlg_btn_dir">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/ic_folder_black_48dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ff000000"
            android:gravity="center_vertical"
            android:text="@string/folder"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/new_dlg_btn_file">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/ic_file_black_48dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#ff000000"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/file"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/new_dlg_btn_root_path">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@mipmap/ic_root_black_48dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:gravity="center_vertical"
                android:text="@string/root_label"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/new_dlg_btn_internal_sdcard">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/ic_sd_storage_black_48dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ff000000"
            android:gravity="center_vertical"
            android:text="@string/internal_storage_label"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/new_dlg_btn_extend_sdcard">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/ic_storage_black_48dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ff000000"
            android:gravity="center_vertical"
            android:text="@string/external_storage_label"/>
    </LinearLayout>
</LinearLayout>
